<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="382.0" prefWidth="409.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.btsciel.convertion_monetaire.FXMLController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <RadioButton fx:id="RadioButton1" mnemonicParsing="false" selected="true" text="Euro - Dollard US">
         <toggleGroup>
            <ToggleGroup fx:id="ToogleGroup" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="RadioButton2" mnemonicParsing="false" text="Dollard US - Euro" toggleGroup="$ToogleGroup" />
      <Label fx:id="Euro" text="Euro">
         <graphic>
            <TextField fx:id="textField" />
         </graphic></Label>
      <Button id="BoutonConvertir" fx:id="Bouton" mnemonicParsing="false" prefHeight="34.0" prefWidth="45.0" stylesheets="@Style.css" />
      <Label fx:id="Dollards" text="Dollard-US">
         <graphic>
            <TextField fx:id="textfield2" />
         </graphic>
      </Label>
   </children>
</VBox>
